<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
             xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BMIDemo.MainPage">
             
    
    <VerticalStackLayout 
        Margin="10"
        Spacing="25"
        VerticalOptions="Center">
        <Label
            FontSize="30"
            HorizontalTextAlignment="Center"
            Text="BMI calculator"
            TextColor="#CCCCCC" />
        <Entry 
            x:Name="Weigth"
            BackgroundColor="#2A2A2A" 
            Keyboard="Numeric"
               Placeholder="Weigth in Kgs(e.g. 90)" PlaceholderColor="#CCCCCC"
               TextColor="#CCCCCC"
            />
        <Entry
            x:Name="Heigth"
            BackgroundColor="#2A2A2A" 
            Keyboard="Numeric"
       Placeholder="Heigth in meters(e.g. 180)" PlaceholderColor="#CCCCCC"
       TextColor="#CCCCCC"/>
        <Entry 
            x:Name="BMI"
            IsEnabled="False"
            BackgroundColor="#2A2A2A" 
       Placeholder="Your BMI" PlaceholderColor="#CCCCCC"
       TextColor="#CCCCCC"
               />

        <Button BackgroundColor="#0078D4" Text="CALCULATE" TextColor="White" 
                Clicked="Button_Clicked"/>
    </VerticalStackLayout>
</ContentPage>
